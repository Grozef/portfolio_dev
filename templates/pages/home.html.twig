{% block body %}
	<style>
.parallax-container {
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    height: 50vh; /* Hauteur de la section */
    display: flex; /* Flexbox pour le centrage */
    justify-content: center; /* Centrage horizontal */
    align-items: center; /* Centrage vertical */
    position: relative; /* Position relative pour positionner correctement les enfants */
    overflow: hidden;
}

.parallax-text {
    display: flex;
    flex-direction: column;
    position: relative; /* Pour éviter de suivre le positionnement absolu de l'image */
    text-align: center; /* Centrage du texte */
    color: white; /* Couleur du texte */
    z-index: 1; /* Assure que le texte est au-dessus de l'image */
}

.parallax-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5); /* Assure une meilleure lisibilité */
    z-index: 0;
}
.parallax-text h1 {
    justify-content: center;
    margin: 2rem; /* Supprime les marges par défaut */
    font-size: 3rem; /* Ajustez la taille selon vos besoins */
    line-height: 1.2; /* Contrôle de l'espacement vertical */
    color: white; /* Assure que le texte est lisible */
}

.parallax-text p {
    justify-content: center;
    margin: 1.5rem; /* Ajoute un léger espacement entre le titre et le texte */
    font-size: 1.5rem; /* Taille du texte succinct */
    line-height: 1.5; /* Meilleur espacement pour le paragraphe */
    color: white;
}


		.parallax-image {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background-attachment: fixed;
			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
		}

		.parallax-text {
			position: relative;
			z-index: 1;
			text-align: center;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
		}

		.content-container {
			padding: 20px;
		}

		.image-section {
			display: flex;
			flex-direction: column;
			gap: 20px;
		}

		.image-left,
		.image-right {
			display: flex;
			align-items: center;
			margin: 40px 0; 
			padding: 20px; 
			background-color: #f9f9f9; 
			border-radius: 10px; 
		}

		.image-left img {
			width: 50%;
			margin-right: 20px;
			margin-left: 50px;
		}

		.image-right img {
			width: 50%;
			margin-left: 20px;
			margin-right: 50px;
		}

		.text-right,
		.text-left {
			width: 50%;
		}

		.text-right {
			text-align: left;
		}

		.text-left {
			text-align: left;
		}

		.image-section img {
			transition: transform 2s ease-in-out;
		}

		.image-section .text-right,
		.image-section .text-left {
			transition: transform 3s ease-in-out;
		}

		.image-section img.initial-left {
			transform: translateX(-100%);
		}

		.image-section img.initial-right {
			transform: translateX(100%);
		}

		.image-section .text-right.initial-right,
		.image-section .text-left.initial-right {
			transform: translateX(100%);
		}

		.image-section .text-right.initial-left,
		.image-section .text-left.initial-left {
			transform: translateX(-100%);
		}

		.image-section img.in-view {
			transform: translateX(0);
		}

		.image-section .text-right.in-view,
		.image-section .text-left.in-view {
			transform: translateX(0);
		}

		.image-section img:hover {
			transform: scale(1.1) !important;
		}
	</style>

